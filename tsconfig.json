{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "lib": ["ScriptHost", "ES2019"],
    "allowJs": true,
    "downlevelIteration": true,
    "strict": true,
    "strictPropertyInitialization": true,
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./lib",
    "rootDirs": ["src", "tests"],
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["src/", "tests/"]
}
