{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "lib": ["ScriptHost", "ES2020"],
    "allowJs": true,
    "downlevelIteration": true,
    "strict": true,
    "strictPropertyInitialization": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  }
}
